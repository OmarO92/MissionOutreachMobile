<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="MissionOutreachMobile.Views.RegistrationPage"
    Title="Registration"
    Padding="0,20,0,0">

    <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" Padding="20" >
        <Label Text="Name:" TextColor="#0a78d8" FontAttributes="Bold" FontSize="12"/>
        <Entry Placeholder="XXX" x:Name="firstNameEntry"/>
         <Label Text="Last Name:" TextColor="#0a78d8" FontAttributes="Bold" FontSize="12"/>
        <Entry Placeholder="XXX" x:Name="lastNameEntry"/>
         <Label Text="DOB:" TextColor="#0a78d8" FontAttributes="Bold" FontSize="12"/>
        <Entry Placeholder="XXX" x:Name="dobEntry"/>
        <Button Text="Sign Up" BackgroundColor="#000" BorderRadius="8" HeightRequest="35" FontAttributes="Bold" TextColor="White" x:Name="signUpButton"/>
    </StackLayout>
</ContentPage>
